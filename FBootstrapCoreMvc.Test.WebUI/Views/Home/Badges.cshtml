@using (Html.Bootstrap().Container().Begin())
{
    @Html.Bootstrap().Heading2("Headings")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Heading1("Example heading ").AddBadge("New")
        @Html.Bootstrap().Heading2("Example heading ").AddBadge("New")
        @Html.Bootstrap().Heading3("Example heading ").AddBadge("New")
        @Html.Bootstrap().Heading4("Example heading ").AddBadge("New")
        @Html.Bootstrap().Heading5("Example heading ").AddBadge("New")
        @Html.Bootstrap().Heading6("Example heading ").AddBadge("New")
    }

    <hr />
    @Html.Bootstrap().Heading2("Buttons")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Button("Notifications ").AddBadge("4")
    }

    <hr />
    @Html.Bootstrap().Heading2("Positioned")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Button("Inbox").AddBadge("99+").PositionBadge()
        <br />
        <br />
        @Html.Bootstrap().Button("Profile").AddBadge("").PositionBadge()
    }

    <hr />
    @Html.Bootstrap().Heading2("Background colors")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Badge("Primary").SetTextBgState(TextBgState.Primary)
        @Html.Bootstrap().Badge("Secondary").SetTextBgState(TextBgState.Secondary)
        @Html.Bootstrap().Badge("Success").SetTextBgState(TextBgState.Success)
        @Html.Bootstrap().Badge("Danger").SetTextBgState(TextBgState.Danger)
        @Html.Bootstrap().Badge("Warning").SetTextBgState(TextBgState.Warning)
        @Html.Bootstrap().Badge("Info").SetTextBgState(TextBgState.Info)
        @Html.Bootstrap().Badge("Light").SetTextBgState(TextBgState.Light)
        @Html.Bootstrap().Badge("Dark").SetTextBgState(TextBgState.Dark)
    }

    <hr />
    @Html.Bootstrap().Heading2("Pill badges")
    using (Html.Bootstrap().Div().Begin())
    {
        @Html.Bootstrap().Badge("Primary").SetTextBgState(TextBgState.Primary).RoundedPill()
        @Html.Bootstrap().Badge("Secondary").SetTextBgState(TextBgState.Secondary).RoundedPill()
        @Html.Bootstrap().Badge("Success").SetTextBgState(TextBgState.Success).RoundedPill()
        @Html.Bootstrap().Badge("Danger").SetTextBgState(TextBgState.Danger).RoundedPill()
        @Html.Bootstrap().Badge("Warning").SetTextBgState(TextBgState.Warning).RoundedPill()
        @Html.Bootstrap().Badge("Info").SetTextBgState(TextBgState.Info).RoundedPill()
        @Html.Bootstrap().Badge("Light").SetTextBgState(TextBgState.Light).RoundedPill()
        @Html.Bootstrap().Badge("Dark").SetTextBgState(TextBgState.Dark).RoundedPill()
    }
}